@model IEnumerable<BlueBox.Models.Customer>
@{
	ViewBag.Title = "CustomerList";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Customers</h2>

@if (!Model.Any())
{
	<p>There are no customers to display</p>
}
else
{
	<table>
		<thead>
			<tr>
				<th>Customer Name</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var customer in Model)
			{
				<tr>
					<td>@Html.ActionLink(customer.Name.ToString(), "OneCustomer", "Customers", new { id=customer.Id }, null)</td>
				</tr>
			}
		</tbody>
	</table>

}